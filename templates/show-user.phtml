        if (isset($user["first_name"]) && isset($user["last_name"])) { 
            echo "{$user['first_name']} {$user['last_name']}";
        }
        ?>
    </h1>
    <h2>
        <?php 
        if (isset($user["email"])) 
        {
            echo $user["email"];
        }
