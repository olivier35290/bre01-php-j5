$id = null;

if (isset($_GET["id"])) {
    $id=$_GET["id"];
    
    $query = $db->prepare('SELECT * FROM users WHERE id = :id');
    $query->bindParam(':id', $id, PDO::PARAM_INT);
    $query->execute();
    
    $user = $query->fetch(PDO::FETCH_ASSOC);
}
?>

